{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/node",
        "config": {
          "installCommand": "pnpm install --store-dir ../.pnpm-store",
          "buildCommand": "npm install hexo-server hexo-browsersync hexo-renderer-pug --save"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/public/$1",
        "headers": { "cache-control": "s-maxage=0" }
      }
    ]
  }
  