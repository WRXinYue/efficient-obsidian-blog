{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/node",
            "config": {
                "installCommand": "pnpm install",
                "buildCommand": "pnpm run build"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "dev": {
        "command": "hexo server"
    }
}