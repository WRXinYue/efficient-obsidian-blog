{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "source/**",
        "excludeFiles": "node_modules/**",
        "installCommand": "pnpm install",
        "buildCommand": "npx hexo generate"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
