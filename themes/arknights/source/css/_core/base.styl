// ========= 基础样式
// ====== base style

cursor = "data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAYAAAAGBAMAAAAS4vJ7AAAAElBMVEX///////////////////////+65XQCAAAABXRSTlPUzXppDN7WmLAAAAAZSURBVAjXY3ASVGEwDQ1mYA0NAGEQGyQGAC9SA/00lbgwAAAAAElFTkSuQmCC"

html, body, a, button, input, textarea
  cursor url(cursor) 3 3, default

html, body
  position static

#cursor-outer
  z-index 65536
  position fixed
  transform translate3d(-50%, -50%, 0px)
  height 36px
  width 36px
  border 1px solid #ccc
  border-radius 50%
  pointer-events none
  transition background-color .3s, width .3s, height .3s
#cursor-effect
  z-index 65535
  position fixed
  transform translate3d(-50%, -50%, 0px) scale(0)
  height 80px
  width 80px
  border 4px solid #ccc
  border-radius 50%
  opacity 0
  pointer-events none

main
  -ms-scrollbar-base-color #fe24
  -ms-scrollbar-track-color #fe22
  scrollbar-color #fe2 #69620a
  scrollbar-width thin
  scrollbar-gutter stable
@media ( min-width 769px)
  ::-webkit-scrollbar
    width 6px
    height 6px
  ::-webkit-scrollbar-thumb
    background-color #fe24
    border-radius .25em
  ::-webkit-scrollbar-track
    background-color #fe22
  ::-webkit-scrollbar-thumb:hover
    background-color #fe2a
  ::-webkit-scrollbar-thumb:window-inactive
    background-color #fe22

body
  margin 0
  color #c4c4c4
  background-color #141516
  background-attachment fixed
  background-position 50% 0
  background-repeat no-repeat
  background-size cover
  font-family "JetBrains Mono", 'Microsoft YaHei', '\5b8b\4f53', sans-serif

h1, h2, h3, h4, h5, h6
  color #fff
  margin-block-start 0.33em
  margin-block-end 0.23em
  padding-top 0.2em
  padding-bottom 0.2em

#post-content
  h1, h2, h3, h4 ,h5, h6
    border-bottom #89898966 solid 1px
    display flex
  h1
    font-size 1.75em
  h2
    font-size 1.60em
  h3
    font-size 1.45em
  h4
    font-size 1.30em
  h5
    font-size 1.15em
  h6
    font-size 1em

p
  overflow visiable

a
  text-decoration none

a,
:is(strong, em)>a
  color #2bf
  padding 0 3px
  transition color .3s,
    background-color .3s,
    line-height .3s,
    padding .3s,
    border .3s,
    opacity .3s
  @media ( min-width 769px )
    &:hover
      color #000
      background-color #22bbff
    &:active
      color #000
      background-color #fe2

time
  font-family BenderLight

code, pre
  font-family "JetBrains Mono"
code
  margin 0!important
  background-color rgba(#fff, .1)
  padding 0 3px!important
pre
  margin 6px 0
  background-color transparent

kbd
  color #000
  background-color #fe2
  box-shadow 0 0.12em #ba2;
  margin 0 2px
  border-radius 2px
  padding 0 3px
  font-family "JetBrains Mono"

em
  font-family Times, "Times New Roman", 'FangSong', 'SimSun', serif
strong em, em strong
  font-family "JetBrains Mono", 'Microsoft YaHei', '\5b8b\4f53', sans-serif
:not(a)>:is(strong, em)
  color #fff
:not(a)>:is(strong em, em strong)
  color #C0392B

blockquote
  border-left #2bf solid 5px
  padding 3px 20px
  background-color rgba(#fff, .05)
  transition .3s
  blockquote
    margin 0
    padding-right 0
  &:hover
    background-color rgba(#fff, .1)
ol
  overflow auto

li
  margin-block-start 0.2em
  margin-block-end 0.2em
  blockquote
    margin 0
    padding-right 0

table
  border 0
  border-collapse collapse
  th
    color #000
    background-color #fff
    border #fff solid 1px
    padding 0 10px
  td
    padding 0px 8px
    border #2bf solid 1px
    &:hover
      background-color rgba(#2bf, .1)

input
  cursor url(cursor) 3 3, text
  user-select none
  font-family "JetBrains Mono", 'Microsoft YaHei', '\5b8b\4f53', sans-serif
