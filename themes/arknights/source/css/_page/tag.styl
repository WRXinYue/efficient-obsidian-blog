.tag-list
  padding 10px
.tag-list-item
  position relative
  line-height 23px
  background-color #313131
  display inline-block
  margin 5px
  border #313131 solid 1px
  border-radius 3px
  &, a, span
    transition .3s
  @media ( min-width 769px )
    &:hover
      border-color #2bf
      a
        color #000
        background-color #2bf
      span
        background-color #313131
    &:active
      border-color #fe2
      a
        background-color #fe2
.tag-list-link
  color #fff
  padding 3px 6px 3px 12px
  display table-cell
  box-sizing border-box
  &::after
    content ''
    width 100%
    height 100%
    position absolute
    top 0
    left 0
.tag-list-count
  width 10px
  padding 3px 6px
  color #fff
  background-color #494949
  display table-cell
  pointer-events none
  vertical-align middle
