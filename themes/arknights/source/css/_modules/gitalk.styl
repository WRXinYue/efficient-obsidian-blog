    padding 0.75em
    display block
    -webkit-box-sizing border-box
    box-sizing border-box
    width 100%
    min-height 5.125em
    max-height 15em
    border-radius 5px
    border 1px solid #fff
    color #fff
    font-size 0.875em
    word-wrap break-word
    resize vertical
    background-color rgba(255, 255, 255, 0.05)
