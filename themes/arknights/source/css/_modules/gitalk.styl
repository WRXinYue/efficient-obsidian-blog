    -webkit-box-sizing border-box
    box-sizing border-box
  a.is--active
    color #555
    pointer-events none
    &:hover
      background unset
      color #555
  .hide
    display none !important
  .gt-svg
    position relative
    top -2px
    transition .3s
    display inline-block
    width 1em
    height 1em
    vertical-align sub
    svg
      width 100%
      height 100%
  .gt-ico
    display inline-block
  &.gt-ico-text
    margin-left 0.3125em
  .gt-header-controls-tip:hover
    color #000
  .gt-ico-github
    position relative
    top 4px
    .gt-svg
      width 42px
      height 42px
      fill #c4c4c4
      &:hover
        fill #000
  .gt-spinner
    position relative
    &::before
      content ''
      -webkit-box-sizing border-box
      box-sizing border-box
      position absolute
      top 3px
      width 0.75em
      height 0.75em
      margin-top -0.1875em
      margin-left -0.375em
      border-radius 50%
      border 1px solid #000
      border-top-color #2bf
      -webkit-animation gt-kf-rotate 0.6s linear infinite
      animation gt-kf-rotate 0.6s linear infinite
  .gt-loader
    position relative
    border 1px solid #999
    -webkit-animation ease gt-kf-rotate 1.5s infinite
    animation ease gt-kf-rotate 1.5s infinite
    display inline-block
    font-style normal
    width 1.75em
    height 1.75em
    line-height 1.75em
    border-radius 50%
    &:before
      content ''
      position absolute
      display block
      top 0
      left 50%
      margin-top -0.1875em
      margin-left -0.1875em
      width 0.375em
      height 0.375em
      background-color #999
      border-radius 50%
  .gt-avatar
    display inline-block
    width 3.125em
    height 3.125em
  .gt-avatar-github
    width 3em
    height 3em
    &:hover .gt-svg
      fill #000
  .gt-btn
    &:hover
      transition .3s
      background-color rgba(255, 255, 255, 0.1)
      border 1px solid #fe2
      color #fe2
    &.is--disable
      cursor not-allowed
      opacity 0.5
  .gt-btn-text
    font-weight 400
  .gt-btn-loading
    position relative
    margin-left 0.5em
    display inline-block
    width 0.75em
    height 1em
    vertical-align top
  .gt-btn-login
    margin-right 0
  .gt-error
    text-align center
    margin 0.625em
    color #ff3860
  .gt-initing
    padding 1.25em 0
    text-align center
  .gt-initing-text
    margin 0.625em auto
    font-size 92%
  .gt-no-init
    padding 1.25em 0
    text-align center
  .gt-link
    border-bottom 1px dotted #2bf
  .gt-meta
    margin 1.25em 0
    padding 1em 0
    position relative
    border-bottom 1px solid #313131
    font-size 1em
    position relative
    z-index 10
    &:after
      clear both
  .gt-counts
    margin 0 0.625em 0 0
  .gt-user
    float right
    margin 0
    font-size 92%
    .gt-ico
      margin 0 0 0 0.3125em
      svg
        fill #c4c4c4
  .gt-user-pic
    width 16px
    height 16px
    vertical-align top
    margin-right 0.5em
  .gt-user-inner
    display inline-block
